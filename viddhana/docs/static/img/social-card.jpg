<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 630" width="1200" height="630">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f0f23;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1a2e;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#6366f1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4f46e5;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#818cf8;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)" />
  
  <!-- Decorative grid pattern -->
  <g stroke="rgba(99, 102, 241, 0.1)" stroke-width="1">
    <line x1="0" y1="0" x2="1200" y2="630" />
    <line x1="0" y1="630" x2="1200" y2="0" />
    <line x1="600" y1="0" x2="600" y2="630" />
    <line x1="0" y1="315" x2="1200" y2="315" />
  </g>
  
  <!-- Logo circle -->
  <circle cx="600" cy="240" r="80" fill="url(#logoGradient)" />
  
  <!-- V shape -->
  <path d="M 545 200 L 600 300 L 655 200" 
        stroke="white" 
        stroke-width="14" 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        fill="none" />
  
  <!-- Title -->
  <text x="600" y="400" 
        font-family="system-ui, -apple-system, sans-serif" 
        font-size="56" 
        font-weight="700" 
        fill="url(#textGradient)" 
        text-anchor="middle">
    VIDDHANA
  </text>
  
  <!-- Tagline -->
  <text x="600" y="460" 
        font-family="system-ui, -apple-system, sans-serif" 
        font-size="24" 
        fill="#a1a1aa" 
        text-anchor="middle">
    The Operating System for Wealth
  </text>
  
  <!-- Developer Hub badge -->
  <rect x="475" y="500" width="250" height="40" rx="20" fill="rgba(99, 102, 241, 0.2)" />
  <text x="600" y="527" 
        font-family="system-ui, -apple-system, sans-serif" 
        font-size="18" 
        fill="#818cf8" 
        text-anchor="middle">
    Developer Hub
  </text>
</svg>
